# Database
DATABASE_URL=sqlite:///./cards.db

# Image Processing
MAX_IMAGE_DIM=1000

# CLIP Model
CLIP_MODEL=ViT-B/32
DEVICE=cuda  # or cpu

# OCR
TESSERACT_LANG=slk
TESSERACT_CONFIG=--psm 6

# Confidence Thresholds
CONFIDENCE_HIGH=0.75
CONFIDENCE_MEDIUM=0.5
CONFIDENCE_LOW=0.3

# Score Weights
TEXT_WEIGHT=0.4
EMBED_WEIGHT=0.6
CONSENSUS_BOOST=0.15
